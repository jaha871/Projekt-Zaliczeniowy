
@model VisitCreateModel

@{ ViewData["Title"] = "VisitModel"; }


<head>

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->

    <link href="https://fonts.googleapis.com/css?family=Oswald:700|Patua+One|Roboto+Condensed:700" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<style>
    body {
        width: 100%;
        height: 100%;
        font-family: 'Roboto Condensed', sans-serif;
    }


    h1, h2, h3 {
        margin: 0 0 35px 0;
        font-family: 'Patua One', cursive;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    p {
        margin: 0 0 25px;
        font-size: 18px;
        line-height: 1.6em;
    }

    a {
        color: #26a5d3;
    }

        a:hover, a:focus {
            text-decoration: none;
            color: #26a5d3;
        }

    #contact {
        background: #333333;
        color: #f4f4f4;
        padding-bottom: 80px;
    }

    textarea.form-control {
        height: 100px;
    }
</style>
<section id="contact" class="content-section text-center">
    <div class="contact-section">
        <div class="container">
            <h2>Dodanie nowej wizyty</h2>
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <form class="form-horizontal" asp-action="EditVisit" asp-route-id="@ViewData["Id"]">
                        <div class="form-group">
                            <select name="doctors" class="form-control" style="height: 40px">
                                @foreach (var item in Model.DoctorModel)
                                {
                    <option value=@item.Id>
                        @Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.Surname) @Html.DisplayFor(modelItem => item.Specialization)
                    </option>}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="dateOfVisit">Data wizyty</label>
                            <input type="date" class="form-control" id="dateOfVisit" asp-for="@Model.VisitModel.DateOfVisit" placeholder="data wizyty" name="DateOfWizit">
                        </div>
                        <div class="form-group">
                            <select name="patients" class="form-control" style="height: 40px">
                                @foreach (var item in Model.PatientModel)
                                {
                    <option value=@item.Id>
                        @Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.Surname)
                    </option>}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="description">Opis</label>
                            <input type="text" class="form-control" id="description" placeholder="Opis" asp-for="@Model.VisitModel.Description" name="Description">
                        </div>
                        <div class="form-group">
                            <label for="znizka">Zniżka</label>
                            <input type="text" class="form-control" id="znizka" placeholder="Zniżka" asp-for="@Model.VisitModel.Discount" value="0" name="Discount">
                        </div>
                        <div class="form-group">
                            <label for="cena">Cena</label>
                            <input type="number" class="form-control" id="cena" placeholder="Cena" asp-for="@Model.VisitModel.VisitPrice" value="0" name="VisitPrice">
                        </div>

                        <button type="submit" class="btn btn-default">Zatwierdź</button>
                    </form>
                    <hr>
                    @if (ViewData["Message"] != "")
                    {
        <div style="color: red; margin-bottom: 20px">Proszę poprawić błąd: @ViewData["Message"]</div>}
                </div>
            </div>
        </div>
    </div>
</section>