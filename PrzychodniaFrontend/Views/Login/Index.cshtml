@model LoginModel


<head>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->

</head>
<style>
    .LoginStyle {
        margin-top: 200px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="LoginStyle">
                <div class="panel-heading">
                    <h3 class="panel-title">Login via site</h3>
                </div>
                <div class="panel-body">
                    <form asp-action="Index">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="yourmail@example.com" asp-for="Email" name="email" type="text">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Password" name="password" type="password" value="" asp-for="Password">
                            </div>
                            @if (ViewData["Message"] != null)
                            {
                                <div style="color: red">@ViewData["Message"]</div>
                            }
                            

                            <input class="btn btn-lg btn-success btn-block" type="submit" value="Login">
                            <input type="submit" value="Bez logowania" class="btn btn-lg btn-success btn-block" />
                        </fieldset>
                    </form>
                    <hr/>
                </div>
            </div>
        </div>
    </div>
</div>